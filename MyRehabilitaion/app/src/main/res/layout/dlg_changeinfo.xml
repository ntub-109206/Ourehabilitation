<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_design02"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center|center_horizontal"
            android:background="@drawable/btn_design06"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="基本資料編輯"
                android:textColor="#ffffff"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_name"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:text="姓名"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/edt_infoname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:hint="請輸入姓名"
                android:ems="10"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_infoemail"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:text="E-mail"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/edt_infoemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:hint="請輸入信箱"
                android:ems="10"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_infophonenum"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:text="手機號碼"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/edt_infophonenum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:ems="10"
                android:hint="請輸入手機"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_changepasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改密碼" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_chginfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_design07"
                android:text="儲存"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_checkcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:background="@drawable/btn_design05"
                android:layout_weight="1"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>