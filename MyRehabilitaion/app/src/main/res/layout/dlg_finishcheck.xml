<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_design02"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center|center_horizontal"
            android:background="@drawable/btn_design06"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:gravity="center"
                android:textSize="18sp"
                android:text="確認完成"
                android:textColor="#ffffff"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/txt_bodypart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="腳踝"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center|center_horizontal"
                android:text="紀錄?"
                android:textColor="#ffffff"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_times"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:text="本次次數"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_times"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="次數"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_buildtime"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:text="建立日期"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_buildtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:text="建立日期"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_checkconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_design07"
                android:text="開始" />

            <Button
                android:id="@+id/btn_checkcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:background="@drawable/btn_design05"
                android:layout_weight="1"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>